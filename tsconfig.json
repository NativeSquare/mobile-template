{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@convex/*": ["./convex/*"],
      "@constants": ["./constants.ts"]
    }
  },
  "skipLibCheck": true,
  "moduleResolution": "Bundler",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "babel.config.js"
  ]
}
